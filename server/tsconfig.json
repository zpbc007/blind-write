{
  "compilerOptions": {
    "outDir": "dist/src",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": ".",          
    "paths": {
        "@routes/*": ["src/routes/*"],
        "@src/*": ["src/*"],
        "@middleware/*": ["src/middleware/*"]
    },
    "allowSyntheticDefaultImports": true   
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
      "src/**/*"
  ]
}
